@model notienendqver.Models.Almacen

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Almacen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodAlmacen" />
            <div class="form-group">
                <label asp-for="NombreAlmacen" class="control-label"></label>
                <input asp-for="NombreAlmacen" class="form-control" />
                <span asp-validation-for="NombreAlmacen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LugarAlmacen" class="control-label"></label>
                <input asp-for="LugarAlmacen" class="form-control" />
                <span asp-validation-for="LugarAlmacen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <hr />
            <div>
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Regresar</a>
            </div>
        </form>
    </div>
</div>


    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
