@model notienendqver.Models.Contrato

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Contrato</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CodContrato" />
            <div class="form-group">
                <label asp-for="CodVivienda" class="control-label">Nombre Vivienda</label>
                <select asp-for="CodVivienda" class="form-control" asp-items="ViewBag.CodVivienda"></select>
                <span asp-validation-for="CodVivienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoContrato" class="control-label"></label>
                <input asp-for="TipoContrato" class="form-control" />
                <span asp-validation-for="TipoContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>
            <hr/>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
