@model notienendqver.Models.Beneficiario

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar Beneficiario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCBeneficiario" class="control-label"></label>
                <input asp-for="NombreCBeneficiario" class="form-control" />
                <span asp-validation-for="NombreCBeneficiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DniBeneficiario" class="control-label"></label>
                <input asp-for="DniBeneficiario" class="form-control" />
                <span asp-validation-for="DniBeneficiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoBeneficiario" class="control-label"></label>
                <select asp-for="EstadoBeneficiario" class="form-select" >
                    <option value="Activo">Activo</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Rechazado">Rechazado</option>
                </select>
                <span asp-validation-for="EstadoBeneficiario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechBeneficiario" class="control-label"></label>
                <input type="date" asp-for="FechBeneficiario" class="form-control" />
                <span asp-validation-for="FechBeneficiario" class="text-danger"></span>
            </div>
            <hr />
            <div>
                <input type="submit" value="Agregar" class="btn btn-success"/>
                <a asp-action="Index" class="btn btn-primary">Regresar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function validateForm() {
            var isValid = true;

            var letterFields = ["NombreBeneficiario"];
            var letterPattern = /^[A-Za-z\s]+$/;

            letterFields.forEach(function (field) {
                var input = document.querySelector('input[name="' + field + '"]');
                if (input) {
                    if (!letterPattern.test(input.value)) {
                        input.setCustomValidity('Solo se permiten letras y espacios');
                        isValid = false;
                    } else if (input.value.length > 120) {
                        input.setCustomValidity('El nombre del almacén no puede exceder los 120 caracteres');
                        isValid = false;
                    } else {
                        input.setCustomValidity('');
                    }
                }
            });

            // Campos que deben contener solo letras y tener máximo 120 caracteres
            var numberFields = ["LugarAlmacen"];
            var numberPattern = /^[A-Za-z\s]+$/;

            letterFields.forEach(function (field) {
                var input = document.querySelector('input[name="' + field + '"]');
                if (input) {
                    if (!letterPattern.test(input.value)) {
                        input.setCustomValidity('Solo se permiten letras y espacios');
                        isValid = false;
                    } else if (input.value.length > 120) {
                        input.setCustomValidity('El nombre del almacén no puede exceder los 120 caracteres');
                        isValid = false;
                    } else {
                        input.setCustomValidity('');
                    }
                }
            });

            return isValid;
        }
    </script>
}
